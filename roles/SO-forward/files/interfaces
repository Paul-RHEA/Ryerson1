# This configuration was created by the  Ansible script.

# loopback network interface
auto lo
iface lo inet loopback

# Security Onion Management network interface
auto ens3
iface ens3 inet static
  address {{ ansible_ens3['ipv4']['address'] }}
  gateway {{ ansible_default_ipv4['gateway'] }}
  netmask {{ ansible_ens3['ipv4']['netmask'] }}
  dns-nameservers 10.200.0.10

auto ens4
iface ens4 inet manual
  up ip link set $IFACE promisc on arp off up
  down ip link set $IFACE promisc off down
  post-up for i in rx tx sg tso ufo gso gro lro; do ethtool -K $IFACE $i off; done
  post-up echo 1 > /proc/sys/net/ipv6/conf/$IFACE/disable_ipv6
  # You probably don't need to enable or edit the following setting,
  # but it is included for completeness.
  # Note that increasing beyond the default may result in inconsistent traffic:
  # https://taosecurity.blogspot.com/2019/04/troubleshooting-nsm-virtualization.html
  # post-up ethtool -G $IFACE rx 4096

# CITEF Management interface
auto ens5
iface ens5 inet static
  address {{ ansible_ens5['ipv4']['address'] }}
  network {{ ansible_ens5['ipv4']['network'] }}
  netmask {{ ansible_ens5['ipv4']['netmask'] }}
